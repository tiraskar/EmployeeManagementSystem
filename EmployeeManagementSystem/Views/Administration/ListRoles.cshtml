@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="text-center text-info">All Roles</h4>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
            Role Id=@role.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">@role.Name</h5>
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-success">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create new role</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}
